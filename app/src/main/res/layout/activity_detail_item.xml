<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrounddetailproduk"
    tools:context=".DetailItem">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <ImageButton
            android:background="@drawable/baseline_arrow_back_24"
            android:layout_gravity="center_vertical"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="DETAIL PRODUK"
            android:textColor="@color/white"
            android:fontFamily="@font/jockeyone"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textSize="20sp"/>
    </FrameLayout>

    <LinearLayout
        android:layout_marginTop="48dp"
        android:layout_marginBottom="300dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/judul_item_detail"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sound System PA 10k"
            android:fontFamily="@font/jockeyone"
            android:textColor="@color/ungu_tua"
            android:layout_marginStart="10dp"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sound System"
            android:fontFamily="@font/jockeyone"
            android:textColor="@color/ungu_tua"
            android:layout_marginStart="10dp"
            android:textSize="15sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ssgambar"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="430dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sound System PA 10k"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/jockeyone"
            android:textColor="@color/ungu_tua"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RP. 5.000.000,00"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/jockeyone"
            android:textColor="@color/red"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Penyewaan Produk Sudah Termasuk"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppinsbold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Biaya Pasang dan Bongkar"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/poppinsregular"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Kelistrikan"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/poppinsregular"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Mixer"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/poppinsregular"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Transportasi"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/poppinsregular"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Setting suara dengan Talent"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/poppinsregular"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Seorang Mekanik"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/poppinsregular"
            android:textSize="12sp"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="660dp">
        <ImageButton
            android:background="@drawable/buttonungutua"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"/>
        <ImageButton
            android:background="@drawable/baseline_shopping_cart_24"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"/>

    </FrameLayout>
</RelativeLayout>